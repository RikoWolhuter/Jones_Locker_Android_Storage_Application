    <ImageView android:layout_height="150dp" android:layout_width="match_parent" app:layout_constraintVertical_bias="0.027" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="parent" app:layout_constraintEnd_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent" app:srcCompat="@drawable/_4dp" android:id="@+id/imageView"/>

