    <TextView android:layout_height="34dp" android:layout_width="169dp" app:layout_constraintVertical_bias="0.928" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.138" app:layout_constraintEnd_toEndOf="parent" android:textSize="16sp" android:textColor="#070707" android:text="Forgot your password? "/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintVertical_bias="0.912" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.728" app:layout_constraintEnd_toEndOf="parent" android:textSize="16sp" android:textColor="#0C4E81" android:text="Recover password"/>

    <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintVertical_bias="0.499" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/imageView2" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.798" app:layout_constraintEnd_toEndOf="parent" app:srcCompat="@drawable/ic_baseline_remove_red_eye_24"/>

