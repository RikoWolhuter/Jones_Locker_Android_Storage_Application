<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="371dp"
            android:layout_height="61dp"
            android:background="@color/white"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:navigationIcon="@drawable/diamond_small"
            app:subtitleTextAppearance="@style/TextAppearance.AppCompat.Body2"
            app:subtitleTextColor="#000000"
            app:titleMargin="4dp" />

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_alignParentRight="true"

            android:animateLayoutChanges="true"


            android:background="#FFFFFF"


            android:closeIcon="@drawable/ic_baseline_close_24"
            android:layoutDirection="ltr"
            android:searchHintIcon="@drawable/ic_baseline_search_24"
            android:searchIcon="@drawable/ic_baseline_search_24"
            android:textDirection="rtl"
            app:iconifiedByDefault="true"
            app:queryBackground="@android:color/transparent" />

    </LinearLayout>

    <TextView android:layout_height="72dp" android:layout_width="213dp" app:layout_constraintVertical_bias="0.132" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.439" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:textSize="25dp" android:textColor="#090909" android:text="Add a item to the collection" android:id="@+id/textView8"/>

    <EditText
        android:id="@+id/editTextTextPersonName11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Add a Name"
        android:textColor="#807575"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.346"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="171dp"
        android:layout_height="109dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.397"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.472"
        app:srcCompat="@drawable/ic_baseline_image_24" />

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintVertical_bias="0.695" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.454" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:textSize="24dp" android:text="Add a description for this item" android:id="@+id/textView7"/>

    <EditText android:layout_height="49dp" android:layout_width="334dp" app:layout_constraintVertical_bias="0.785" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.376" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:textColor="#938A8A" android:id="@+id/editTextTextPersonName9" android:inputType="textPersonName" android:ems="10" tools:ignore="SpeakableTextPresentCheck"/>

    <Button android:layout_height="61dp" android:layout_width="149dp" app:layout_constraintVertical_bias="0.91" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:text="CONTINUE" android:id="@+id/button5"/>

</androidx.constraintlayout.widget.ConstraintLayout>