<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/menu">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/nav_toolbar"
                    android:layout_width="371dp"
                    android:layout_height="61dp"
                    android:background="@color/white"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="?attr/actionBarTheme"
                    app:navigationIcon="@drawable/diamond_small"
                    app:subtitleTextAppearance="@style/TextAppearance.AppCompat.Body2"
                    app:subtitleTextColor="#000000"
                    app:titleMargin="4dp" />

                <SearchView
                    android:id="@+id/searchView"
                    android:layout_width="wrap_content"
                    android:layout_height="61dp"
                    android:layout_alignParentRight="true"

                    android:animateLayoutChanges="true"


                    android:background="#FFFFFF"


                    android:closeIcon="@drawable/ic_baseline_close_24"
                    android:layoutDirection="ltr"
                    android:searchHintIcon="@drawable/ic_baseline_search_24"
                    android:searchIcon="@drawable/ic_baseline_search_24"
                    android:textDirection="rtl"
                    app:iconifiedByDefault="true"
                    app:queryBackground="@android:color/transparent" />

            </LinearLayout>

        </com.google.android.material.navigation.NavigationView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"


                >

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="412dp"

                    app:srcCompat="@drawable/addtext_com_mtyzmjewmtc4nzc" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="227dp"
                    app:srcCompat="@drawable/addtext_com_mtyxnju5mtc4nda" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="match_parent"
                    android:layout_height="232dp"
                    app:srcCompat="@drawable/addtext_com_mtyynti5mtc4ntm" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/addtext_com_mtyxnzuxmtc4ndi" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>