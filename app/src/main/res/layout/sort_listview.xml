<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/menu">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/nav_toolbar"
                    android:layout_width="371dp"
                    android:layout_height="61dp"
                    android:background="@color/white"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="?attr/actionBarTheme"
                    app:navigationIcon="@drawable/diamond_small"
                    app:subtitleTextAppearance="@style/TextAppearance.AppCompat.Body2"
                    app:subtitleTextColor="#000000"
                    app:titleMargin="4dp" />

                <SearchView
                    android:id="@+id/searchView"
                    android:layout_width="wrap_content"
                    android:layout_height="61dp"
                    android:layout_alignParentRight="true"

                    android:animateLayoutChanges="true"


                    android:background="#FFFFFF"


                    android:closeIcon="@drawable/ic_baseline_close_24"
                    android:layoutDirection="ltr"
                    android:searchHintIcon="@drawable/ic_baseline_search_24"
                    android:searchIcon="@drawable/ic_baseline_search_24"
                    android:textDirection="rtl"
                    app:iconifiedByDefault="true"
                    app:queryBackground="@android:color/transparent" >

                </SearchView>

            </LinearLayout>
        </com.google.android.material.navigation.NavigationView>

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sort By"
            android:textColor="#000000"
            android:textSize="20sp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Name"
            android:textSize="16sp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Date Added"
            android:textSize="16sp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sort Order"
            android:textColor="#000000"
            android:textSize="20sp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ascending"
            android:textSize="16sp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Descending"
            android:textSize="16sp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Space
                android:layout_width="130dp"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="144dp"
                android:layout_height="63dp"
                android:gravity="center"
                android:text="Continue" />
        </LinearLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>